<link rel="stylesheet" href="https://dl.dropboxusercontent.com/u/43615815/CSS/bootstrap.css">
<link rel="stylesheet" href="https://dl.dropboxusercontent.com/u/43615815/CSS/signin.css">
	<%=form_tag log_in_path, :class => 'form-signin' do%>
	<h2 class="form-signin-heading">Sign In</h2>
		<%=label_tag :email %>
		<%=text_field_tag :email, nil, :class => 'form-control' %>
		</br>
		<%=label_tag :password %>
		<%=password_field_tag :password, nil, :class => 'form-control' %>
		</br>
	<%=submit_tag "Log in", :class => "btn btn-primary" %>
	
		<h3>Don't have an account?</h3>
	<%= link_to 'Sign Up', {:controller => 'users', :action => 'new'} %>
	<%end%>
	
	</br>

